<div class="Registration_page d-flex flex-column justify-content-center align-items-center">
  <div class="Box Box__small Box__small_form Box__radius Box__opacity mb-4">
      <h1 class="h3 text-center mb-0">DoTDMSiiC</h1>
    </div>
  <div class="Box Box__small Box__small_form Box__radius Box__opacity">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="form-floating mb-3">
        <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email", placeholder: "name@example.com" %>
        <%= f.label :email, "Електронна адреса" %><br />
      </div>

      <div class="form-floating mb-3">
        <%= f.password_field :password, class:"form-control", autocomplete: "new-password", placeholder: "Password" %>
        <%= f.label :password, "Пароль" %>
        <% if @minimum_password_length %>
        <em class="password_small" >(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      </div>

      <div class="form-floating mb-3">
        <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "new-password", placeholder: "Password"  %>
        <%= f.label :password_confirmation, "Підтвердіть пароль" %><br />
      </div>

      <div class="actions mt-3 mb-3">
        <%= f.submit "Зареєструватися",  class: "btn btn__primary btn__radius" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>